@model OrderManagmentApp.WEB.Models.CreateUserViewModel
@using OrderManagmentApp.Infrastructure.Constatnts;
@using Microsoft.AspNetCore.Identity;
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="Create" asp-controller="Users" class="col-4 mx-auto">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">@Messages.Name</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">@Messages.Password</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>
    @*<div class="form-group">
            <label asp-for="Year" class="control-label">Год рождения</label>
            <input type="number" asp-for="Year" class="form-control" />
        </div>*@
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="UserRoles" value="@role.Name" />@role.Name <br />
            }
    </div>









    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>