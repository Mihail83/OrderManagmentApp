@model OrderManagmentApp.WEB.Models.CustomerViewModel

@{
    ViewData["Title"] = "Edit Customer";
}

<h4>Редактировать данные клиент</h4>
<hr />
<div class="row">    
    <form asp-controller="Customer" asp-action="Edit" method="post" class="row col-md-10">

        <div class="col-md-5">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled />
