@model OrderManagmentApp.WEB.Models.AgreementViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>AgreementViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input readonly asp-for="Id" class="form-control" />
                <input readonly asp-for="CreateDate" class="form-control" />
            </div>
            @*<div class="form-group">
                <label asp-for="CreateDate" class="control-label"></label>
                              
            </div>*@
            <div class="form-group">
                <label asp-for="Good" class="control-label"></label>
                <input asp-for="Good" class="form-control" />
                <span asp-validation-for="Good" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label"></label>
                <input id="Sum" asp-for="Sum" class="form-control no-number-validation" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <label asp-for="CustomerId" class="control-label"></label>
                <input asp-for="CustomerId" class="form-control" />
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer" class="control-label"></label>
                <input readonly asp-for="Customer" class="form-control" />
                <span asp-validation-for="Customer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderId" class="control-label"></label>
                <input asp-for="OrderId" class="form-control" />
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AgreementManager">Back to List</a>
</div>

@section Scripts {
    @{  await Html.RenderPartialAsync("_ValidationScriptsPartial");
        await Html.RenderPartialAsync("~Views/Shared/PartialViewWithScript/AgreementEditPart.cshtml");}
}
